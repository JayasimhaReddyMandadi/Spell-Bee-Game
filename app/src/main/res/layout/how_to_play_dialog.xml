<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="26dp"
    card_view:cardElevation="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/how_to_play_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to Play??"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#F59E0B"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/how_to_play_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click the Speaker icon or the 'Hear It' button to listen to the word. Once you hear it, type the word into the input box below. Good luck!"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:gravity="center"/>

        <Button
            android:id="@+id/proceed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#F59E0B"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
